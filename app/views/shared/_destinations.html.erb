<div class="container">
  <div class="center-align">
      <h4>Incredible Destinations</h4>
      <h5>Discover them all</h5>
    </div>
  <div class="row">
    <% @destinations.each do |destination| %>
      <div class="col s12 m6 l4">
        <div class="card">
          <div class="card-image waves-effect waves-block waves-light">
            <%= image_tag destination.cover.card.url %>
          </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%= link_to truncate(destination.name, length: 21), destination_path(destination) %><i class="material-icons right">more_vert</i></span>
          <p><%= "#{destination.activities.count} #{"activity".pluralize(destination.activities.count)} in this destination" %></p>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">
            <%= destination.description %><i class="material-icons right">close</i>
          </span>
        </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="right">
    <%= link_to "See All Destinations", destinations_path %>
  </div><br><br>
</div>