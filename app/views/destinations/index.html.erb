<div class="container">
  <div class="row">
    <h4 class='center'>Destinations</h4>
    <% if policy(:destination).new? %>
      <%= link_to "New Destination", new_destination_path, class:'right' %>
    <% end %>
  </div>

  <div class="row">
    <% @destinations.each do |destination| %>
      <div class="col s12 m6 l4">
        <div class="card">

          <div class="card-image waves-effect waves-block waves-light">
            <%= link_to image_tag(destination.cover.card.url), destination_path(destination) %>
          </div>

          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4">
              <%= link_to truncate(destination.name, length: 21), destination_path(destination) %>
              <i class="material-icons right">more_vert</i>
            </span>
            <p>
              <%= link_to "View All #{destination.activities.count} #{"activity".pluralize(destination.activities.count)} for this destination", destination_path(destination) %>
            </p>
          </div>

          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4">
            <%= destination.description %><i class="material-icons right">close</i>
            </span>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>