<div class="container">

  <div class="row">
    <h4 class='center'>Categories</h4>
    <% if policy(:category).new? %>
      <%= link_to "New Category", new_category_path, class:'right' %>
    <% end %>
  </div>

  <div class="row">
    <% @categories.each do |category| %>
    <div class="col s12 m6 l4">
      <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
        <%= link_to image_tag(category.cover.card.url), category_path(category), class: 'activator' %>
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4">
            <%= link_to truncate(category.name, length: 21), category_path(category) %>
            <i class="material-icons right">more_vert</i>
          </span>
          <p>
            <%= link_to "View #{category.activities.approved.count} #{"activity".pluralize(category.activities.approved.count)} in this category", category_path(category) %>
          </p>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">
            <%= category.name %><i class="material-icons right">close</i>
          </span>
        </div>
      </div>
    </div>
    <% end %>
  </div>

</div>